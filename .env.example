# EXPERIMENTAL configuration (.env)
# Copy to .env at project root and adjust values as needed

# Core URLs
BASE_URL=https://your-tenant.coupahost.com
# Optional explicit login URL; defaults to BASE_URL when unset
# LOGIN_URL=https://your-tenant.coupahost.com/sessions/new

# Paths
DOWNLOAD_FOLDER=~/Downloads/CoupaDownloads
# macOS default profile dir shown; set accordingly per OS
EDGE_PROFILE_DIR=~/Library/Application Support/Microsoft Edge
EDGE_PROFILE_NAME=Default

# Processing
ENABLE_PARALLEL_PROCESSING=true
MAX_PARALLEL_WORKERS=4
PARALLEL_MIN_POS_THRESHOLD=2
USE_PROCESS_POOL=false
PROC_WORKERS=1
PROC_WORKERS_CAP=8

# Driver manager
DRIVER_AUTO_DOWNLOAD=true
# EDGE_DRIVER_PATH=/absolute/path/to/msedgedriver

# Verbosity
VERBOSE_OUTPUT=false
SHOW_DETAILED_PROCESSING=false
SHOW_SELENIUM_LOGS=false

# Excel override (optional)
# EXCEL_FILE_PATH=/absolute/path/to/input.xlsx
